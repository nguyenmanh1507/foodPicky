extends ../layouts/patterns-library

block content
  .row
    .small-12.column
      h1 Media

  .row
    - var i = 1
    while i < 3
      .small-6.columns
        .media
          .media__section
            img.thumbnail(src="http://placehold.it/100x100")
          .media__section
            .mbxs.txt-bold.txt-large Thai Restaurant Hotpot #{i++}
            .txt-muted.mbmd Burgers, American, Sandwiches, Fast Food, BBQ
            .media__meta
              .txt-muted.mrmd
                i.material-icons check_circle
                |  Min $10,00
              .txt-muted.mrmd
                i.material-icons motorcycle
                |  30 mins
              div
                i.material-icons star
                i.material-icons star
                i.material-icons star
                i.material-icons star
                i.material-icons star_border
                span.txt-muted  (24)
